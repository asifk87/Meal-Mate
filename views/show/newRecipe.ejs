<div class="container mx-auto">
  <h1 class="text-2xl">New Recipe</h1>
  <div class="bg-gray-400 m-3 p-3 rounded-lg shadow-2xl">
    <form action="/recipes" method="POST">
      <div class="">
        <div>
          <label for="title">Recipe Title:</label> <br />
          <input
            class="w-full rounded-lg"
            type="text"
            name="title"
            id="title"
            placeholder="Chicken Soup"
          />
        </div>
        <div>
          <label for="serving">Serving:</label> <br />
          <input
            class="w-full rounded-lg"
            type="number"
            name="serving"
            id="serving"
            placeholder="2"
          />
        </div>
        <div>
          <label for="ingredients">Ingredients:</label> <br />
          <input
            class="w-full rounded-lg"
            type="text"
            name="ingredients"
            id="ingredients"
            placeholder="Chicken, Onion, Pepper"
          />
        </div>
        <div>
          <label for="instruction">Cooking Instruction:</label> <br />
          <input
            class="w-full rounded-lg"
            type="text"
            name="instruction"
            id="instruction"
            placeholder="Turn on oven to 400"
          />
        </div>
        <div>
          <label for="img">Image URL:</label> <br />
          <input
            class="w-full rounded-lg"
            type="text"
            name="img"
            id="img"
            placeholder="Image/Url.png"
          />
        </div>
      </div>
      <div class="flex justify-around my-2">
        <input class="btn mx-2" type="submit" />
        <a class="btn mx-2" href="/recipes"> Cancel </a>
      </div>
    </form>
  </div>
</div>
